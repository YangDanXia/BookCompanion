/* pages/me/me.wxss */
page {
   background-color: #f6f6f6;
   padding: 0;
}

/*信息栏*/
.themes-box-top{ 
   text-align: center; 
   padding-bottom: 16px; 
   padding-top: 10px; 
   background: #fff; 
   border-bottom: 1px solid #e0e0e0;
}

.themes-box-title{
    width: 200rpx;
    height: 200rpx;
    border-radius: 200rpx;
    box-shadow: 0 0 300rpx 100rpx rgba(255, 255, 255, .2), 0 1px 0 rgba(255, 255, 255, 0.4);
    display: -webkit-inline-flex; 
}

.themes-box-subtitle{ 
    font-size: 20px; 
    color: #666; 
    display: block; 
    margin-top: 4px; 
}


.container{
  background-color: #f6f6f6;
  padding: 0;
}



.more-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
}
.more-btn {
  align-items: center;
  font-size: 13pt;
  padding: 0 30rpx;
  display: flex;
  background-color: #fff;
  min-height: 105rpx;
}
.issue-link, .about-link {
  margin-bottom: 25rpx;
}
.btn-icon {
  width: 45rpx;
  height: 45rpx;
  margin-right: 15rpx;
}
.btn-text {
  flex: 1;
}
.btn-open {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-left: 10rpx;
}
.btn-enter {
  width: 28rpx;
  height: 37rpx;
}
.submit-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 40rpx 13%;
    height: 80rpx;
    border-radius: 3px;
 
    background-color: #73b4ef;
    color: #fff;
 
    padding: 0;
 
}



.more-middle {
  border-top: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
}
.more-up{
  border-top: 1px solid #f0f0f0;
}
.more-down{
  border-bottom: 1px solid #f0f0f0;
}

 .list{
  display: flex;
  flex-direction: row;
  flex:1;
  background:white;
}
.items{
  width: 100rpx;
  flex:1;
  text-align: center;
  margin:10rpx 0;


}

.items image{
  width: 70rpx;
  height: 70rpx;
}

.items text{
  display: block;
  text-align: center;
  margin-top: 10rpx;
  font-size:30rpx;
}
.tubiao1
{
  font-size:26rpx;
}

.notice{
     margin-left:-40%;
   padding-top: 10rpx;

}

 .record{
  background-color: red;
  padding: 5rpx 10rpx;
  border-top-left-radius: 150rpx;
  border-bottom-left-radius: 150rpx;
  border-top-right-radius: 150rpx;
  border-bottom-right-radius: 150rpx;
  color:white;
 }