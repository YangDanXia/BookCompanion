<!--pages/index/functions/bookOrder.wxml-->
<!--标题栏-->
<view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">待借图书</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">待还图书</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">预约图书</view>
</view>


<!-- <swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight}}px" bindchange="bindChange" wx:if="{{login}}"> -->
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight}}px" bindchange="bindChange">
<!--借书栏-->
<swiper-item>
 <view class="list">
      <view class="items" data-id="borrow" bindtap="ViewQRcode">
        <image src="../../../img/icon/qcode.png"></image>
        <text>我要借书</text>
      </view>
  </view>


  <!-- <view wx:if="{{borrowBook ==''}}" class="login-warn">目前没有借阅书籍</view>
  <view wx:else> -->
  <view class="bookList">
   <!-- <block wx:for="{{borrowBook}}" wx:key="item"> -->

   <view class="themes-list">
    <view class="themes-list-box">
    <checkbox value="item.name" checked="checked"/>
     <navigator url="../../bookDetails/bookDetails?isbn={{item.ISBN}}" hover-class="none">
       <view class="themes-list-thumbnail">
         <image class="themes-list-img" src='{{item.image}}' />
       </view>
       <view class="themes-list-main">
         <view class="themes-list-name">item.title</view>
         <view class="themes-list-description">item.author</view>
         <view class="themes-list-name">索书号：item.BookId</view>
         <view class="themes-list-name">借书时间：item.borrowTime</view>
         <view class="themes-list-name">借书地点：item.bookAddress</view>
       </view>
      </navigator>

     </view>
     <!-- <view class="books-operate">
        <image class="operate-type" src="../../../img/icon/{{item.collectStatus}}.png"  data-index="{{index}}" bindtap="doBorrowColllect"></image>
        <image class="operate-type" src="../../../img/icon/del.png" data-index="{{index}}" data-type ="borrow"  bindtap="delBorrowBook"></image>
      </view> -->

    </view>

      <view class="operate">
        <view class="operate-toDo">
           <image class="operate-type" src="../../../img/icon/del.png"/>
           <text>收藏</text>
        </view>
        <view class="operate-toDo">
           <image class="operate-type" src="../../../img/icon/del.png"/>
           <text>删除</text>
        </view>
      </view>
   <!-- </block> -->
 </view>

</swiper-item>

<!--还书栏-->
<swiper-item>
 <view class="list">
      <view class="items" data-id="back" bindtap="ViewQRcode">
        <image src="../../../img/icon/qcode.png"></image>
        <text>我要还书</text>
      </view>
  </view>


  <view wx:if="{{borrowBook ==''}}" class="login-warn">目前没有要还书籍</view>
  <view wx:else>
   <block wx:for="{{borrowBook}}" wx:key="item">

   <view class="themes-list">
    <view class="themes-list-box">
     <navigator url="../../bookDetails/bookDetails?isbn={{item.ISBN}}" hover-class="none">
       <view class="themes-list-thumbnail">
         <image class="themes-list-img" src='{{item.image}}' />
       </view>
       <view class="themes-list-main">
         <view class="themes-list-name">{{item.title}}</view>
         <view class="themes-list-description">{{item.author}}</view>
         <view class="themes-list-name">索书号：{{item.BookId}}</view>
         <view class="themes-list-name">借书时间：{{item.borrowTime}}</view>
         <view class="themes-list-name">借书地点：{{item.bookAddress}}</view>
       </view>
      </navigator>
     </view>
 
    </view>
      <view class="operate">
        <view class="operate-toDo">
           <image class="operate-type" src="../../../img/icon/del.png"/>
           <text>收藏</text>
        </view>
        <view class="operate-toDo">
           <image class="operate-type" src="../../../img/icon/del.png"/>
           <text>删除</text>
        </view>
      </view>    
   </block>
 </view>

</swiper-item>


<!--预约栏-->
<swiper-item>
  <view class="login-warn" wx:if="{{reserveBook ==''}}">还没有预约的书籍喔</view>
  <view wx:else>
   <block wx:for="{{reserveBook}}" wx:key="item">

   <view class="themes-list">
    <view class="themes-list-box" bindlongtap="showDetails" data-index="{{index}}">
     <navigator url="../../bookDetails/bookDetails?isbn={{item.isbn}}" hover-class="none">
       <view class="themes-list-thumbnail">
         <image class="themes-list-img" src='{{item.img}}' />
       </view>
       <view class="themes-list-main">
         <view class="themes-list-name">{{item.title}}</view>
         <view class="themes-list-description">{{item.author}}</view>
         <view class="themes-list-name">索书号：{{item.bookId}}</view>
         <view class="themes-list-name">取书时间：{{item.reserveTime}}</view>
         <view class="themes-list-name">取书地点：{{item.bookAddress}}</view>
       </view>
      </navigator>
     </view>
 
    </view>
      <view class="operate">
        <view class="operate-toDo">
           <image class="operate-type" src="../../../img/icon/del.png"/>
           <text>收藏</text>
        </view>
        <view class="operate-toDo">
           <image class="operate-type" src="../../../img/icon/del.png"/>
           <text>删除</text>
        </view>
      </view>
   </block>
 </view>
</swiper-item>

</swiper>

