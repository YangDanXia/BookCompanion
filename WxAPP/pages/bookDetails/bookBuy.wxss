/*二维码显示*/
 .list{
  display: flex;
  flex-direction: row;
  flex:1;
  background:white;
}
.items{
  width: 100rpx;
  flex:1;
  text-align: center;
}

.items image{
  width: 300rpx;
  height: 320rpx;
  margin-top:10%;

}
.items image.service-icon{
  width: 50rpx;
  height: 50rpx;
}
.items text{
  display: block;
  text-align: center;
  margin-top: 10rpx;
  font-size:30rpx;
}
 
 .buy-items image{
width:120rpx;
height:120rpx;
margin-right:33rpx;
margin-bottom:50rpx;
margin-left:33rpx;
margin-top:50rpx;

}

 .main-wrap{
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	overflow: hidden;
}
.bg{
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
    background-position: center;
	background-size: cover;
    filter: blur(30rpx);
	transform: scale(1.15);
}
.bg:after{
	content: '';
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: rgba(0,0,0,.5);
}
.main{
	position: absolute;
	bottom: 0;
	top: 0;
	width: 100%;
	z-index: 2;
	overflow: hidden;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}
.song-info{
	flex: none;
	display: flex;
	background: rgba(0,0,0,.1);
	box-sizing: border-box;
	width: 100%;
	justify-content: space-between;
	align-items: center;
}
.song-lyric{
	flex: auto;
	display: flex;
	align-items: center;
	justify-content: center;
}
.song-control{
	padding: 30rpx 0;
}
.song-info .img{
  flex:none;
  margin:15px;
  width:60rpx;
  height:60rpx;

}
.song-info .info{
	color: #fff;
	flex: auto;
    padding:10rpx 0;

}
.song-info .info .song-name{
	display: block;
	font-size: 36rpx;
    padding:15rpx;

}
.song-info .info .singer-name{
	display: block;
	font-size: 28rpx;
}
.song-info .info .singer-name text:not(:first-of-type){
  content: '/';
  margin: 0 8rpx;
}

.song-control .progress{
	height: 80rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.progress .time-bar{
	position: relative;
	flex: auto;
	height: 4rpx;
	overflow: hidden;
	background: rgba(255,255,255,.2);
}
.progress .time-bar .time-play{
	position: absolute;
	left: -100%;
	width: 100%;
	height: 100%;
	background: #31c27c;
	transition: all 1s linear;
}
.progress .time-start,
.progress .time-total{
	flex: none;
	color: #808080;
	width: 110rpx;
	text-align: center;
	font-size: 24rpx;
}

.song-lyric .img{
    width:300rpx;
    height:390rpx;
	border-radius: 10rpx;
	animation: rotate 10s linear infinite;
    margin-top:-32%;

}
.song-lyric .img.pause{
	animation-play-state: paused;
}