<!--pages/bookDetails/bookDetails.wxml-->

<!-- loading -->
<loading hidden="{{hidden}}">
    加载中...
</loading>

<!--标题栏-->
<view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">简介</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">内容</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">书评</view>
</view>



<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight}}px" bindchange="bindChange">
<!--书籍信息-->
<swiper-item>
 <scroll-view style="height:{{winHeight}}px" scroll-y="true" enable-back-to-top="true" >
  <view class="book-details">
   <view class="book-cover">
     <image class="cover" src="{{bookInfo.images.large}}"></image>
   </view>
   <view class="book-synopsis">
    <view class="book-title">
      <text>{{bookInfo.title}}</text>
    </view>
    <view class="book-brief">ISBN：{{bookInfo.isbn13}}</view>
    <view class="book-brief">作者：{{bookInfo.author}}</view>
    <view class="book-brief">出版社：{{bookInfo.publisher}}</view>
    <view class="book-brief">出版时间：{{bookInfo.pubdate}}</view>
    <view class="book-brief">页码：{{bookInfo.pages}}页</view>
  </view>
   <image class="fixed" src="../../img/icon/order.png" bindtap="bookOrder"></image>
</view>



<!--功能栏-->

<view class="themes-box-top">
<label wx:for="{{funItem}}" wx:key="{{item}}">
    <view class="classname">
      <view bindtap="{{item.bindtap}}">
        <image  class="themes-box-title" src="{{item.src}}" />
        <text class="themes-box-subtitle">{{item.name}}</text>
      </view>
    </view>
</label>
</view>

<!--显示馆藏情况-->
<view class="list-main">
 <table class="{{subMenuDisplay}}">
<block wx:if="{{ownBook}}">
  <view class="book-box">
     <view class=" book book-id"><text class="book-info">索书号</text></view>
     <view class=" book book-address"><text class="book-info">馆藏地点</text></view>
     <view class=" book book-statu"><text class="book-info">状态</text></view>
   </view>


    <block wx:for="{{bookOfLib}}"  wx:key="item"> 
     <view class=" book book-id"><text class="book-info">{{item.BookId}}</text></view>
     <view class=" book book-address"><text class="book-info">{{item.BookAddress}}</text></view>
     <view class=" book book-statu"><text class="book-info">{{item.BookStatus}}</text></view>
  </block>
</block>
<block wx:else>
    <view class="book-box"><text class="book-info">该馆暂无此藏书，可向该馆荐购</text></view>
  </block>
  </table>
</view>



<!--弹窗-->
 <picker mode="date" value="{{date}}" start="2017-06-30" end="2017-09-01" bindchange="bindDateChange" 
 disabled="{{timeSelect}}">
<modal hidden="{{confirmHidden}}"  confirm-text="确定" no-cancel="true" bindconfirm="timeSelect" >
  您已预约成功,索书号为：{{bookStatus}},请选择取书时间：
</modal>
</picker>


<!--简介-->
<view class="book-desc">
 <view class="title"  >作者简介</view>
  <view class="{{!descript?'desc-limit':'desc-limit-show'}}">
   <text wx:if="{{bookInfo.author_intro==''}}">暂无作者信息</text>
   <text wx:else>{{bookInfo.author_intro}}</text>
  </view>
 <view class="desc-button" wx:if="{{!descript}}" bindtap="showDesc">展开   
 </view>
 <view class="desc-button" wx:elif="{{descript}}" bindtap="hideDesc">关闭   </view>
</view>

</scroll-view>
</swiper-item>

<!--目录-->
<swiper-item>
<view class="list-main">
<!--<view class="list-name"></view>-->
<view class="line"></view>
  <view class="list-name" wx:if="{{bookInfo.summary==''}}">暂无内容简介</view>
  <view class="list-name">{{bookInfo.summary}}</view>
</view>
</swiper-item>

<!--书评-->
<swiper-item>
<block wx:for="{{viewItem}}" wx:key="{{item}}"> 
  <view class="comment-list">
   <view class="view-list-box">
     <view class="comment-list-thumbnail">
      <image class="view-list-img" src="{{item.img}}" />
     </view>
     <view class="view-list-main">
      <view class="comment-list-name">{{item.name}}</view>
      <view class="comment-list-description">{{item.time}}</view>
      <view class="comment-list-description">{{item.content}}</view>
     </view>
   </view>
  </view>
</block>
</swiper-item>



</swiper>


 
