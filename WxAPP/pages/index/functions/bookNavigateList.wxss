/* pages/index/functions/bookNavigateList.wxss */
.swiper-tab
{ 
  height: 80rpx; 
  line-height: 60rpx; 
  background: #FFF; 
  display: flex; 
  position: relative; 
  z-index: 2; 
  border-bottom: 1px solid #F4F4F4; 
  flex-direction:row; 
  justify-content:center; 
  align-items:center;
}

.swiper-tab-list
{ 
  margin: 0 130rpx; 
  font-size: 32rpx; 
  display:flex;
}
 .swiper-tab-icon{
  width:57rpx;
  height:57rpx;
 }



li{
   font-size: 33rpx; 
   line-height: 83rpx;
   color: #575757;
   height: 83rpx;
   display: block;
   padding-left: 8px;
   background-color: #fff;
   border-bottom: 1px solid #dbdbdb; 
}

.book-list{
  height:800rpx;
  position:fixed;
  top:70rpx;
  right:0;
  bottom:0;
  left:0;

}



.masked{
  z-index:-1;
  background-color:#000;
  opacity:.4;
 }

.agree{
  background-color: #f4f4f4;
}

.disagree{
  background-color: white;
}



.themes-list-box{ 
  padding: 36rpx 20rpx; 
  height:200rpx;
}

 
.themes-list-name{
  text-align:left;
  line-height:45rpx;
} 

.themes-list-description{
  text-align:left;
  line-height:45rpx;
 }

 .list-description {
   font-size:30rpx;
 }