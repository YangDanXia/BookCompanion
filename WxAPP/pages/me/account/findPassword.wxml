<!--pages/me/account/findPassword.wxml-->
 
<view class="bd">
  <form class="login-form">
    <view class="input-group">
      <text class="input-label">手机号</text>
      <input cursor-spacing="30" id="userid"  bindinput="useridInput" placeholder="用于接收验证码"/>
    </view>
    <view class="input-group">
      <text class="input-label">新密码</text>
      <input cursor-spacing="30" password="true" id="passwd" bindinput="passwdInput" placeholder="设置新密码"/>
    </view>
    <view class="code">
      <view class="input-code">
        <text class="input-label">验证码</text>
        <input cursor-spacing="30"  id="code" bindinput="codeInput" />
      </view>
      <view class="sendCode" bindtap="reset">
        <text>发送验证码</text>
      </view>
    </view>
  </form>
  <view class="list"> 
    <view class="confirm-btn" bindtap="login">
      <text>重新登录</text>
    </view>
  </view>
</view>
 

