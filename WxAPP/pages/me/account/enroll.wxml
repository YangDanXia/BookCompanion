<!--pages/me/account/enroll.wxml-->
 
<view class="bd">
  <form class="login-form">
    <view class="input-group">
      <text class="input-label">手机号</text>
      <input cursor-spacing="30" id="userid"  bindinput="useridInput"/>
    </view>
    <view class="input-group">
      <text class="input-label">密码</text>
      <input cursor-spacing="30" password="true" id="passwd" bindinput="passwdInput" />
    </view>
    <view class="code">
    <view class="input-code">
       <text class="input-label">验证码</text>
       <input cursor-spacing="30"  id="newPhone" bindinput="newPhone" />
    </view>
    <view class="sendCode" bindtap="reset">
       <text>发送验证码</text>
    </view>
    </view>
  </form>
  <view class="list"> 
    <view class="confirm-btn" bindtap="enroll">
      <text>注册账号</text>
    </view>
    <view class="confirm-btn" bindtap="reset">
      <text>取消</text>
    </view>
  </view>
</view>
 
