/**app.wxss**/
page { 
  height: 100%;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}


.placeholder-style{
  font-size:33rpx;
  color: #ABACB0;
}

 /*显示下拉菜单*/
.show{
  display:block;
}
/*隐藏下拉菜单*/
.hidden{
  display:none;
}


/*显示异常*/
.img{
  width:280rpx;
  height:300rpx;
}

.contain{
  text-align: center;
  margin-top:280rpx;
  margin-left:40rpx;
}


   /**
   * 列表
   */
.themes-list{ 
    background: #f9f9f9; 
    display: block;
    /*padding: 10rpx 20rpx;*/
    }


.themes-list-main{ 
    margin-left: 200rpx;

    }

.themes-list-box{ 
    display: block; 
    background: #fff; 
    position: relative; 
    padding: 20rpx 20rpx; 
    border-bottom: 1px solid  #D3D3D3;
    border-radius: 10rpx;
    }

.themes-list-thumbnail{ 
    position: absolute; 
    top: 35rpx; 
    left:20rpx;
    height:210rpx;
    width:160rpx; 

    }

.themes-list-img{ 
    width: 100%; 
    height:100%; 
    border-radius: 2%; 
    border: 1px solid #999;
    }

.themes-list-name{ 
    font-size: 35rpx; 
    color:black; 
    /*height: 40rpx; */
    line-height:40rpx; 
    text-align:center;

    font-weight:bold;
    }

.themes-list-description{ 
    font-size: 30rpx;  
    height:auto; 
    line-height: 50rpx;
    text-align:center;

    }

.list-description{ 
    padding-top:2%; 
    color: #999; 
    height: 50rpx; 
    line-height: 50rpx; 
    overflow: hidden; 
    }
    
navigator{
    width:100%;
    height: 100%;
    }
 
/*图书、书单操作*/ 
.books-operate{
  width:15%;
}

.operate-type{
  width:45rpx;
  height:45rpx;
  margin:18rpx;
}

/*订单显示*/
.fixed{
  position: fixed;
  right:10rpx;
  width:75rpx;
  height: 75rpx;
}