/* pages/me/account/login.wxss */
.container {
  background: #73b4ef;
  padding: 0;
  height: 100%;
  overflow: hidden;
}
.content{
  flex: 1;
  display: flex;
  position: relative;
  z-index: 10;
  width: 100%;
  padding-bottom: 450rpx;
  background: -webkit-gradient(linear, left top, left bottom, from(rgba(244,244,244,0)), color-stop(0.1, #f4f4f4), to(#f4f4f4));
   opacity: 0;
  transform: translate3d(0,100%,0); 
  animation: rise 0s cubic-bezier(0.19, 1, 0.22, 1) .0s forwards;
}
@keyframes rise{
  100% {opacity: 1;transform: translate3d(0,450rpx,0);}
}
.title{
  position: absolute;
  top: 60rpx;
  left: 50%;
  width: 800rpx;
  height: 220rpx;
  margin-left: -300rpx;
  opacity: 0;
  animation: show 0s cubic-bezier(0.19, 1, 0.22, 1) .0s forwards;
}
@keyframes show{
  0% {opacity: 0;}
  100% {opacity: .95;}
}

.hd {
  position: absolute;
  top: 0;
  left: 50%;
  width: 1000rpx;
  margin-left: -500rpx;
  height: 200rpx;
  transition: all .35s ease;
}
 
 
.wave {
  position: absolute;
  z-index: 3;
  right: 0;
  bottom: 0;
  opacity: 0.725;
  height: 260rpx;
  width: 2250rpx;
  animation: wave 10s linear infinite;
}
.wave-bg {
  z-index: 1;
  animation: wave-bg 10.25s linear infinite;
}
@keyframes wave{
  from {transform: translate3d(125rpx,0,0);}
  to {transform: translate3d(1125rpx,0,0);}
}
@keyframes wave-bg{
  from {transform: translate3d(375rpx,0,0);}
  to {transform: translate3d(1375rpx,0,0);}
}

.bd {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  animation: bd-rise 0s cubic-bezier(0.23,1,0.32,1) .0s forwards;
  opacity: 0;
}
@keyframes bd-rise{
  from {opacity: 0; transform: translate3d(0,60rpx,0); }
  to {opacity: 1; transform: translate3d(0,0,0); }
}
form {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
}
.input-group {
  display: flex;
  align-items: center;
  padding: 25rpx 10rpx;
  margin: 40rpx 3%;
  background: #fff;
  border-radius: 5px;
  border: 2px solid #f4f4f4;
  transition: all .25s ease-in-out;
}
 
.input-label {
  color: #888;
  font-size: 13pt;
  height: 25rpx;
  line-height: 25rpx;
  padding: 0 25rpx;
  border-right: 1px solid #d8d8d8; 
}
.input-group input {
  flex: 1;
  font-size: 13pt;
  min-height: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 25rpx;
}
 
 
.confirm-btn {
  font-size: 35rpx;
  line-height: 90rpx;
  height: 90rpx;
  background: #73b4ef;
  color: #fff;
  text-align: center;
  border-radius: 5px;
  margin: 100rpx 60rpx;
  margin-top:25rpx;
  width:250rpx;
}
.confirm-btn:active {
  opacity: .8;
}
 
.login-help {
  align-items: center;
  justify-content: flex-end;
  font-size: 35rpx;
  color: red;
  margin:20rpx 160rpx;
  margin-top:20rpx;
} 

.findPasswd{
  align-items: center;
  justify-content: flex-end;
  font-size: 35rpx;
  color: #989898;
  float:right;
  margin-top:-40rpx;
} 


.list{
  display: flex;
  flex-direction: row;
  flex:1;
  margin-top: 120rpx;
}