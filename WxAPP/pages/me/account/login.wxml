<!--pages/me/account/login.wxml-->
<view class="container">
<image class="title" src="../../../img/show/title.png"></image>
    <view class="content">
      <view class="hd" style="transform:rotateZ(0deg);">
          <image class="wave" src="../../../img/show/wave.png" mode="aspectFill"></image>
          <image class="wave wave-bg" src="../../../img/show/wave.png" mode="aspectFill"></image>
      </view>
      <view class="bd">
        <form class="login-form">
          <view class="input-group">
            <text class="input-label">手机号</text>
            <input type="number" cursor-spacing="30" id="userid" maxlength="7" bindinput="useridInput" />
          </view>
          <view class="input-group">
            <text class="input-label">密码</text>
            <input password="true" cursor-spacing="30" id="passwd" bindinput="passwdInput"  />
          </view>
          <view class="login-help" bindtap="showHelp">
            <text hidden="{{hidden}}">*  手机号或密码错误</text>
          </view>
          <view class="findPasswd" bindtap="findPasswd">
            <text>忘记密码？</text>
          </view>
        </form>
        <view class="list">
        <view class="confirm-btn" bindtap="doLogin">
            <text>登录</text>
        </view>
         <view class="confirm-btn" bindtap="doEnroll">
            <text>注册账号</text>
        </view>
        </view>
      </view>
    </view>

</view>